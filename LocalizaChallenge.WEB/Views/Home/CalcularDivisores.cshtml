@model LocalizaChallenge.Domain.DTO.NumeroNaturalDTO
@{
    ViewData["Title"] = "Calculadora de divisores";
}

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="card bg-secondary shadow border-0">
            <div class="card-header bg-transparent pb-2">
                <div class="text-muted text-center mt-2 mb-3">
                    <h1>Calculadora de Divisores</h1>
                </div>
            </div>
            <div class="card-body px-lg-5 py-lg-5 mb-4">
                @if (ViewBag.Information != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>Erro!</strong> @ViewBag.Information
                    </div>
                }
                <form asp-action="ObterDivisores" asp-controller="Home" method="post">
                    <div class="form-group mb-3">
                        <div class="form-group" class="mb-2">
                            <label for="exampleInputEmail1">Número</label>
                            <input asp-for="Numero" type="number" maxlength="7" class="form-control" id="txtNumero" aria-describedby="NumeroNatural" placeholder="insira um numero natural">
                            <small id="numeroNaturalHelp" class="form-text text-muted">Somente é permitido numeros positivos.</small>
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        @if (Model?.Divisores != null)
                        {
                            <h3>Resultado:</h3>
                            <p>
                                Os divisores do numero <strong>@Model.Numero</strong> são : <strong>@string.Join(',', Model.Divisores.OrderBy(divisor => divisor))</strong>
                            </p>
                        }
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary my-4" type="submit">Calcular Divisores</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-3">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section IdentityHeader
{
    <div class="header bg-gradient-success py-7 py-lg-8 pt-lg-9">
        <div class="container">
            <div class="header-body text-center mb-7">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                        <h1 class="text-white">Bem vindo!</h1>
                        <p class="text-lead text-white">
                            Sistema capaz de decompor um número em todos os seus divisores ou somente os divisores primos.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="separator separator-bottom separator-skew zindex-100">
            <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
            </svg>
        </div>
    </div>
}